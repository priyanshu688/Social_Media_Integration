<?xml version="1.0" encoding="UTF-8"?>

    <RelativeLayout
          xmlns:tools="http://schemas.android.com/tools"
          xmlns:app="http://schemas.android.com/apk/res-auto"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:layout_height="match_parent"
          android:layout_width="match_parent"
          android:background="@drawable/bac1"
          tools:context=".MainActivity">


       <LinearLayout
           android:layout_height="wrap_content"
           android:layout_width="match_parent"
           android:orientation="vertical"
           android:gravity="center"
           android:layout_marginTop="94dp"
           android:id="@+id/spark">

              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:textSize="21dp"
                  android:text="Welcome to"
                  android:textColor="#090808"
                  android:layout_marginBottom="17dp"
                  android:layout_centerHorizontal="true"/>

              <ImageView
                  android:layout_height="220dp"
                  android:layout_width="220dp"
                  android:id="@+id/logo"
                  android:layout_centerHorizontal="true"
                  android:src="@drawable/spark"/>

              <TextView
                  android:layout_height="wrap_content"
                  android:layout_width="wrap_content"
                  android:layout_marginTop="3dp"
                  android:textSize="22dp"
                  android:textColor="#090808"
                  android:text="The Sparks Foundation"/>

        </LinearLayout>


    <LinearLayout
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:layout_marginTop="80dp"
        android:layout_below="@id/spark">

        <com.google.android.gms.common.SignInButton
            android:id="@+id/bt_sign_in"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal|center_vertical"
            android:background="@drawable/gmail_background_button"
            android:text="Sign In with Google"
            android:textColor="#FFFFFF"
            android:textSize="38sp"
            app:layout_constraintBottom_toTopOf="@+id/btn_revoke_access"
            android:textStyle="bold"
            android:drawableLeft="@drawable/search"
            android:gravity="center_horizontal|center_vertical"
            android:paddingHorizontal="10dp"
            android:paddingStart="10dp"
            android:paddingLeft="10dp"
            android:textAllCaps="false"

             />

        <com.facebook.login.widget.LoginButton
            android:id="@+id/login_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="10dp" />

    </LinearLayout>

</RelativeLayout>